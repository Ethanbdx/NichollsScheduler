@page
@model NichollsScheduler.Pages.ConfirmScheduleModel
@{
    ViewData["Title"] = "ConfirmSchedule";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container">
    <br />
    <h2>Confirm your schedule before proceeding.</h2>
    <br />
    <div class="card" style="margin-top: 1em">
        <div class="card-header text-white btn-red">
            <h4>@ConfirmScheduleModel.termName - Schedule</h4>
        </div>
        <div class="card-body">
            <table class="table table-responsive-md table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">CourseModel</th>
                        <th scope="col">Section</th>
                        <th scope="col">Days</th>
                        <th scope="col">Times</th>
                        <th scope="col">Location</th>
                        <th scope="col">Type</th>
                        <th scope="col">Instructor</th>
                        <th scope="col">Credits</th>
                    </tr>
                </thead>
                @foreach (var CourseModel in ConfirmScheduleModel.selectedCourses)
                {
                    <tr>
                        <td><h6>@CourseModel.subject @CourseModel.courseNumber</h6></td>
                        <td><h6>@CourseModel.section</h6></td>
                        @if (CourseModel.days.Count == 1)
                        {
                        <td><h6>@CourseModel.days[0]</h6></td>
                        <td><h6>@CourseModel.time[0]</h6></td>
                        <td><h6>@CourseModel.location[0]</h6></td>
                        <td><h6>@CourseModel.scheduleType[0]</h6></td>
                        <td><h6>@CourseModel.instructor[0]</h6></td>
                        }
                        else
                        {
                            <td>
                                @for (int i = 0; i < CourseModel.days.Count; i++)
                                {
                                <p><h6>@CourseModel.days[i]</h6></p>
                                }
                            </td>
                            <td>
                                @for (int i = 0; i < CourseModel.time.Count; i++)
                                {
                                <p><h6>@CourseModel.time[i]</h6></p>
                                }
                            </td>
                            <td>
                                @for (int i = 0; i < CourseModel.location.Count; i++)
                                {
                                <p><h6>@CourseModel.location[i]</h6></p>
                                }
                            </td>
                            <td>
                                @for (int i = 0; i < CourseModel.scheduleType.Count; i++)
                                {
                                <p><h6>@CourseModel.scheduleType[i]</h6></p>
                                }
                            </td>
                            <td>
                                @for (int i = 0; i < CourseModel.instructor.Count; i++)
                                {
                                <p><h6>@CourseModel.instructor[i]</h6></p>
                                }
                            </td>
                        }
                            <td><h6>@CourseModel.creditHours</h6></td>
                    </tr>
                }
            </table>
        </div>
        <div class="col-6 offset-3" style="text-align:center">
            <a class="btn-lg btn-block btn-red" asp-page="ManualRegister">Confirm Schedule</a>
            <br />
        </div>
    </div>
</div>
